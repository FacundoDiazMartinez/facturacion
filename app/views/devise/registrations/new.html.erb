<div id="bg">
</div>
<table class="full-table">
    <tbody>
      <td class="align-middle">
        <div class="col-sm-5" style="margin: auto;">
          <div class="card" id="login">
            <div class="card-header login-header">
              <center>
                <%= image_tag '/images/logo_blanco1.png', :style => "width:60%;margin:5px auto" %>
              </center>
            </div>
            <div class="card-body">
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                <center>
                    <%= devise_error_messages! %>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, class:'form-control', placeholder: "E-mail", required: true %>
                    </div>

                    <div class="form-group">
                      <%= f.email_field :first_name, autofocus: true, class:'form-control', placeholder: "Nombre", required: true %>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Contraseña", required: true %>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Repetir contraseña", required: true %>
                    </div>

                    <div class="actions">
                      <%= f.submit "Registrarse", class:'btn btn-primary' %>
                      <hr>
                      <%= link_to "Ingresar", new_session_path(resource_name), class: 'btn btn-secondary btn-sm' %> <br>
                    </div>
                </center>
              <% end %>
            </div>
          </div>
        </div>
      </td>
    </tbody>
  </table>