<div class="page-header">
  <%= link_to new_bank_payment_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Bank payment
  <% end %>
  <h1>Listing bank_payments</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @bank_payments) do |bank_payment| %>
            <td><%= link_to 'Show', bank_payment %></td>
        <td><%= link_to 'Edit', edit_bank_payment_path(bank_payment) %></td>
        <td><%= link_to 'Destroy', bank_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
