<div class="modal-body">
	<div class="card-shadow mb-4">
		<ul class="list-group">
          	<li class="list-group-item d-flex justify-content-between lh-condensed">
            	<div>
              		<strong class="my-0">
                		Número:
              		</strong>
            	</div>
            	<span><%= @cheque_payment.number %></span>
          	</li>
          	<li class="list-group-item d-flex justify-content-between lh-condensed">
            	<div>
              		<strong class="my-0">
                		Monto:
              		</strong>
            	</div>
            	<span>$<%= @cheque_payment.total %></span>
          	</li>
          	<li class="list-group-item d-flex justify-content-between lh-condensed">
            	<div>
              		<strong class="my-0">
                		Cliente:
              		</strong>
            	</div>
            	<span>
								<% if !@cheque_payment.payment.purchase_order_id.blank? %>
			            <%= current_user.company.name %>
			          <% else %>
			            <%= @cheque_payment.client.name %>
			          <% end %>
							</span>
          	</li>
          	<li class="list-group-item d-flex justify-content-between lh-condensed">
            	<div>
              		<strong class="my-0">
                		Vencimiento:
              		</strong>
            	</div>
            	<span><%= l(@cheque_payment.expiration) %></span>
          	</li>
          	<li class="list-group-item d-flex justify-content-between lh-condensed">
            	<div>
              		<strong class="my-0">
                		Origen:
              		</strong>
            	</div>
            	<span><%= @cheque_payment.origin %></span>
          	</li>
          	<li class="list-group-item d-flex justify-content-between lh-condensed">
            	<div>
              		<strong class="my-0">
                		Banco:
              		</strong>
            	</div>
            	<span><%= @cheque_payment.entity %></span>
          	</li>
          	<li class="list-group-item d-flex justify-content-between lh-condensed">
            	<div>
              		<strong class="my-0">
                		Observación:
              		</strong>
            	</div>
            	<span><%= @cheque_payment.observation %></span>
          	</li>
          	<li class="list-group-item d-flex justify-content-between lh-condensed">
            	<div>
              		<strong class="my-0">
                		Total:
              		</strong>
            	</div>
            	<span>$<%= @cheque_payment.total %></span>
          	</li>
          	<li class="list-group-item d-flex justify-content-between lh-condensed">
            	<div>
              		<strong class="my-0">
                		Fecha:
              		</strong>
            	</div>
            	<span><%= @cheque_payment.payment.payment_date %></span>
          	</li>
          	<li class="list-group-item d-flex justify-content-between lh-condensed">
            	<div>
              		<strong class="my-0">
                		Generado por:
              		</strong>
            	</div>
            	<span><%= @cheque_payment.generator_name %></span>
          	</li>
        </ul>
    </div>
    <% if !@cheque_payment.payment.invoice_id.nil? %>
      <div class="card-shadow mb-4">
          <hr>
          <div class="m-4">
  	        <p class="text-muted">Factura asociada</p>
  	        <ul class="list-unstyled rounded">
  	          	<li class="media">
  	            	<img class="mr-3" src="/images/invoice.png" alt="Factura">
  	            	<div class="media-body">
  	              		<h5 class="mt-0 mb-1"><%= @invoice.nombre_comprobante %> a <%= @invoice.client_name %></h5>
  	              		<strong>Nº:</strong> <%= @invoice.full_number %><br>
  	              		<strong>Tipo:</strong> <%= @invoice.tipo %><br>
  	              		<strong>Estado:</strong> <%= invoice_state(@invoice.state) %><br>
  	              		<i><%= icon('fas', 'clock') %> <%= @invoice.cbte_fch %></i><br>
  	            	</div>
  	          	</li>
  	          	<li>
  	            	<div class="row">
  	              		<div class="col-md-9" style="padding: 5px 0px 0px 15px;">
  	                  		<h5>Total: <span class="text-info">$ <%= @invoice.total %></span></h5>
  	              		</div>
  	              		<div class="col-md-3 float-right">
  		                	<div class="row">
  		                  		<%  if !@invoice.editable? %>
  		                    		<%= link_to icon('fas', 'eye').html_safe, invoice_path(@invoice.id, format: :pdf), target: '_blank', class: 'btn btn-link' %>
  		                  		<% end %>
  		                  		<%= link_to icon('fas', 'pencil-alt').html_safe, edit_invoice_path(@invoice.id), class: 'btn btn-link' %>
  		                  		<%  if @invoice.editable? %>
  		                    		<%= link_to icon('fas', 'trash').html_safe, @invoice, method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-link' %>
  		                  		<% end -%>
  		                	</div>
  		              	</div>
  	            	</div>
  	          	</li>
  	        </ul>
  	    </div>
		<% elsif !@cheque_payment.payment.purchase_order_id.nil? %>
		<div class="bank-shadow mb-4">
			<hr>
			<div class="m-4">
				<p class="text-muted">Órden de compra asociada</p>
				<ul class="list-unstyled rounded">
						<li class="media">
							<img class="mr-3" src="/images/invoice.png" alt="Órden de compra">
							<div class="media-body">
									<h5 class="mt-0 mb-1">Órden de Compra a <%= @purchase_order.supplier.name %></h5>
									<strong>Nº:</strong> <%= @purchase_order.number %><br>
									<strong>Estado:</strong> <%= po_state_label_helper(@purchase_order) %><br>
									<i><%= icon('fas', 'clock') %> <%= @purchase_order.created_at %></i><br>
							</div>
						</li>
						<li>
							<div class="row">
									<div class="col-md-9" style="padding: 5px 0px 0px 15px;">
											<h5>Total: <span class="text-info">$ <%= @purchase_order.total %></span></h5>
									</div>
									<div class="col-md-3 float-right">
										<div class="row">
												<%  if !@purchase_order.editable? %>
													<%= link_to icon('fas', 'eye').html_safe, purchase_order_path(@purchase_order.id, format: :pdf), target: '_blank', class: 'btn btn-link' %>
												<% end %>
												<%= link_to icon('fas', 'pencil-alt').html_safe, edit_purchase_order_path(@purchase_order.id), class: 'btn btn-link' %>
												<%#  if @purchase_order.editable? %>
													<%# link_to icon('fas', 'trash').html_safe, @purchase_order, method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-link' %>
												<%# end -%>
										</div>
									</div>
							</div>
						</li>
				</ul>
			</div>
		</div>
		<% elsif !@cheque_payment.payment.account_movement_id.nil? %>
			<% if !AccountMovement.unscoped.find(@cheque_payment.payment.account_movement_id).receipt_id.nil? %>
				<% @receipt = Receipt.unscoped.find(AccountMovement.unscoped.find(@cheque_payment.payment.account_movement_id).receipt_id) %>
				<div class="bank-shadow mb-4">
					<hr>
					<div class="m-4">
						<p class="text-muted">Recibo asociado</p>
						<ul class="list-unstyled rounded">
								<li class="media">
									<img class="mr-3" src="/images/invoice.png" alt="Órden de compra">
									<div class="media-body">
											<h5 class="mt-0 mb-1"><%= @receipt.nombre_comprobante %> a <%= @receipt.client_name %></h5>
											<strong>Nº:</strong> <%= @receipt.number %><br>
											<strong>Estado:</strong> <%= receipt_state_label_helper(@receipt) %><br>
											<i><%= icon('fas', 'clock') %> <%= @receipt.created_at %></i><br>
									</div>
								</li>
								<li>
									<div class="row">
											<div class="col-md-9" style="padding: 5px 0px 0px 15px;">
													<h5>Total: <span class="text-info">$ <%= @receipt.total %></span></h5>
											</div>
											<div class="col-md-3 float-right">
												<div class="row">
														<%  if !@receipt.editable? %>
															<%= link_to icon('fas', 'eye').html_safe, receipt_path(@receipt.id, format: :pdf), target: '_blank', class: 'btn btn-link' %>
														<% end %>
														<%= link_to icon('fas', 'pencil-alt').html_safe, edit_receipt_path(@receipt.id), class: 'btn btn-link' %>
														<%#  if @receipt.editable? %>
															<%# link_to icon('fas', 'trash').html_safe, @receipt, method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-link' %>
														<%# end -%>
												</div>
											</div>
									</div>
								</li>
						</ul>
					</div>
				</div>
			<% end %>
    <% end %>
	</div>
</div>
