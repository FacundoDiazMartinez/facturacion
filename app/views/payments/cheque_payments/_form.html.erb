
<% if !@invoice.id.blank? %>
  <% nested_form_for @invoice do |form| %>
    <% form.fields_for :income_payments, form.object.income_payments.build do |f| %>
      <% @builder = f %>
    <% end -%>
  <% end -%>
<% end -%>

<% if !@client.id.blank? %>
  <% nested_form_for [@client, @account_movement] do |f| %>
    <% f.fields_for :account_movement_payments, f.object.account_movement_payments.build do |pf| %>
      <% @builder = pf %>
    <% end -%>
  <% end -%>
<% end -%>

<%= @builder.fields_for :cheque_payment, @builder.object.build_cheque_payment do |cpf| %>

  <%= render '/payments/cheque_payments/shared_form', f: cpf %>

<% end -%>