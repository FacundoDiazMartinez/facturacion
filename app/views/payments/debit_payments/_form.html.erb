<%= render '/payments/shared_builder' %>

<%= @builder.fields_for :debit_payment, @builder.object.build_debit_payment do |cpf| %>

  <div class="form-group">
    <%= cpf.label :bank_id, "Banco" %>
    <%= cpf.select :bank_id, current_user.company.banks.map{|cc| [cc.name, cc.id]}, {prompt: "Seleccione..."}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= cpf.label :total, "Total" %>
    <%= cpf.number_field :total, class: 'form-control subpayment_total', requried: true %>
  </div>

<% end -%>
