<div class="page-header">
  <%= link_to new_retention_payment_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Retention payment
  <% end %>
  <h1>Listing retention_payments</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @retention_payments) do |retention_payment| %>
            <td><%= link_to 'Show', retention_payment %></td>
        <td><%= link_to 'Edit', edit_retention_payment_path(retention_payment) %></td>
        <td><%= link_to 'Destroy', retention_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
