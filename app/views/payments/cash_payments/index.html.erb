<div class="page-header">
  <%= link_to new_cash_payment_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Cash payment
  <% end %>
  <h1>Listing cash_payments</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @cash_payments) do |cash_payment| %>
            <td><%= link_to 'Show', cash_payment %></td>
        <td><%= link_to 'Edit', edit_cash_payment_path(cash_payment) %></td>
        <td><%= link_to 'Destroy', cash_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
