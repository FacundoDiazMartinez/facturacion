<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Tarjeta</th>
      <th scope="col">Total</th>
      <th scope="col">Fecha</th>
      <th scope="col">Flujo</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @card_payments.each do |card_payment| %>
      <tr>
        <td><%= card_payment.credit_card.name %></td>
        <td><%= number_to_currency(card_payment.total, unit: '$', separator: '.', format: "%u %n") %></td>
        <td><%= l(card_payment.payment.payment_date) %></td>
        <td><%= flow_type(card_payment.payment.flow) %></td>
        <td>
          <%= link_to icon('fas', 'eye').html_safe,  payments_card_payment_path(card_payment, invoice_id: card_payment.payment.invoice_id), data:{toggle: 'modal', target: '#showModal', remote: true}, class: 'btn btn-sm btn-icon btn-outline-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @card_payments %>
