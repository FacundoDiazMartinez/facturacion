<div class="page-header">
  <%= link_to new_card_payment_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Card payment
  <% end %>
  <h1>Listing card_payments</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @card_payments) do |card_payment| %>
            <td><%= link_to 'Show', card_payment %></td>
        <td><%= link_to 'Edit', edit_card_payment_path(card_payment) %></td>
        <td><%= link_to 'Destroy', card_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
