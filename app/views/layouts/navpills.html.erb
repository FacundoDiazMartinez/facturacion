<% if user_signed_in? %>
	<div class="sidebar sidebar-animate">
		<ul class="nav flex-column">

		  <li class="nav-item">
		    <%= link_to "#{icon('fas', 'home')} <span class='only-desktop'>Inicio</span>".html_safe, root_path, class: 'nav-link', title: 'Inicio' %>
		  </li>

		  <li class="nav-item">
		  	<% if current_user.has_company? %>
		    	<%= link_to "#{icon('fas', 'building')} <span class='only-desktop'>Compañía</span>".html_safe, company_path(current_user.company_id), class: 'nav-link', title: 'Compañía' %>
		    <% else %>
		    	<%= link_to "#{icon('fas', 'building')} <span class='only-desktop'>Compañía</span>".html_safe, new_company_path(), class: 'nav-link', title: 'Compañía' %>
		    <% end %>
		  </li>

		  <li class="nav-item">
		    <%= link_to "#{icon('fas', 'hand-holding-usd')} <span class='only-desktop'>Ventas</span>".html_safe, invoices_path, class: 'nav-link', title: 'Ventas' %>
		  </li>

		  <li class="nav-item">
		    <%= link_to "#{icon('fas', 'briefcase')} <span class='only-desktop'>Clientes</span>".html_safe, clients_path, class: 'nav-link', title: 'Clientes' %>
		  </li>

		  <li class="nav-item">
		    <%= link_to "#{icon('fas', 'cubes')} <span class='only-desktop'>Productos</span>".html_safe, products_path, class: 'nav-link', title: 'Productos' %>
		  </li>

		  <li class="nav-item">
		    <%= link_to "#{icon('fas', 'archive')} <span class='only-desktop'>Depósitos</span>".html_safe, depots_path, class: 'nav-link', title: 'Depósitos' %>
