		  <li class="nav-item dropdown">
		  	<%= link_to "#{icon('fas', 'shopping-cart')} <span class='only-desktop'>Compras</span>".html_safe, "#", role: 'button', class: 'nav-link dropdown-toggle', data:{ toggle:'dropdown' }, aria: {haspopup: true, expanded: 'false'}, title: 'Compras' %>
