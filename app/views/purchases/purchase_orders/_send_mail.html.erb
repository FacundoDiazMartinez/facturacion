<div class="modal fade bd-example-modal-lg" id="sendMailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  	<div class="modal-dialog modal-lg">
    	<div class="modal-content">
        <%= form_for @purchase_order, url: deliver_purchase_order_path(@purchase_order), method: :post do |form| %>
        	<div class="modal-header">
  			  	<h5 class="modal-title" id="clientModalTitle"><%= icon('far', 'envelope') %> Enviar orden a proveedor</h5>
  			  	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
  			    	<span aria-hidden="true">&times;</span>
  			  	</button>
  	      </div>
    			<div class="modal-body">
    		  	<div class="form-group">
    		  		<p class="alert alert-info h5 text-center">
                <%= "#{icon('fas', 'exclamation-circle')} Envíe la órden de compra a #{@purchase_order.supplier.try(:name)}.".html_safe %>
              </p>
            </div>
            <div class="form-group">
              <%= label_tag :email, "Dirección de correo electrónico" %>
              <%= text_field_tag :email, @purchase_order.supplier.try(:email), class: 'form-control', required: true %>
            </div>
    			</div>
    			<div class="modal-footer">
    				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
    		  	<button type="submit" class="btn btn-primary">Enviar</button>
    			</div>
        <% end %>
	    </div>
  	</div>
</div>
