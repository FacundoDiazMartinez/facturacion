<% if @client.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

    <ul>
    <% @client.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group row">
  <%= label_tag :iva_cond, "Condición I.V.A.", class: 'col-sm-2 col-form-label col-form-label-sm' %>
  <div class="col-md-10">
    <%= f.select :iva_cond, [["Responsable Inscripto"],["Responsable Monotributo"]],{},{class:'form-control form-control-sm'} %>
  </div>
</div>

<div class="form-group row">
  <%= label_tag :document_number, "Documento", class: 'col-sm-2 col-form-label col-form-label-sm' %>
  <div class="col-md-10">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.select :document_type, Afip::DOCUMENTOS, {}, {class: 'form-control form-control-sm input-group-text'} %>
      </div>
      <%= f.text_field :document_number, class: 'form-control form-control-sm' %>
    </div>
  </div>
</div>


