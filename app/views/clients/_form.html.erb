<div id="client_errors"></div>
<div class="form-group">
  <%= f.label :name, "Nombre *" %>
  <%= f.text_field :name, class: 'form-control form-control-sm', required: true %>
</div>

<div class="form-group">
  <div class="row">
    <div class="col">
      <%= f.label :iva_cond, "Condición I.V.A. *" %>
      <%= f.select :iva_cond, [["Responsable Inscripto"],["Responsable Monotributo"], ["Consumidor Final"], ["Excento"]],{},{class:'form-control form-control-sm'} %>
    </div>
    <div class="col">
      <%= f.label :document_number, "Documento *" %>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= f.select :document_type, Afip::DOCUMENTOS, {}, {class: 'form-control form-control-sm input-group-text'} %>
        </div>
        <%= f.text_field :document_number, class: 'form-control form-control-sm', required: true %>
      </div>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col">
      <%= f.label :phone, "Teléfono" %>
      <%= f.text_field :phone,class: 'form-control form-control-sm' %>
    </div>
    <div class="col">
      <%= f.label :mobile_phone, "Celular" %>
      <%= f.text_field :mobile_phone,class: 'form-control form-control-sm' %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email,class: 'form-control form-control-sm' %>
    </div>
    <div class="col">
      <%= f.label :birthday, "Nacimiento" %>
      <%= f.text_field :birthday, class: "form-control form-control-sm datepicker",  autocomplete: "off" %>
    </div>
  </div>
</div>


<div class="form-group">
  <div class="row">
    <div class="col">
      <%= f.label :address, "Dirección" %>
      <%= f.text_field :address,class: 'form-control form-control-sm' %>
    </div>
    <div class="col">
      <%= f.label :payment_day, "Día de pago" %>
      <%= f.text_field :payment_day,class: 'form-control form-control-sm' %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :recharge, "Recargos (%)" %>
  <%= f.number_field :recharge, class: 'form-control form-control-sm', placeholder: "Serán aplicados a las facturas." %>
</div>

<div class="form-group">
  <%= f.label :observation, "Observación" %>
  <%= f.text_area :observation, class: 'form-control form-control-sm' %>
</div>



<hr>
<h5>Contactos</h5>
<center>
  <%= f.fields_for :client_contacts do |cf| %>
    <div class="fields" id="client_contact">
      <div class="form-group">
        <div class="row">
          <div class="col-5">
            <%= cf.text_field :name, class: 'form-control form-control-sm', placeholder: "Nombre" %>
          </div>
          <div class="col-5">
            <%= cf.email_field :email, class: 'form-control form-control-sm', placeholder: "Email" %>
          </div>
          <div class="col-2">
            <%= cf.link_to_remove icon('fas', 'trash'), class: 'btn btn-seconday btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  <% end -%>

  <%= f.link_to_add "Añadir contacto", :client_contacts, class: 'btn btn-secondary btn-sm'  %>
</center>

<center><i>* Campos obligatorios</i></center>

<hr>
<center>
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
  <%= save_button %>
</center>

<script type="text/javascript">
  $('.datepicker').datepicker({
      language: "es",
      dateFormat: "dd/mm/yyyy",
      todayHighlight: true,
      autoclose: true,
      startView: 2
  });
</script>
