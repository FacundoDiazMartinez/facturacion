<div class="p-4">
	<!-- TITULO -->
	<%= title_helper "#{@client.name}" %>
	<% if can? :update, Client %>
		<%= button_edit_helper(edit_client_path(@client.id)) %>
	<% end %>
	<!-- TITULO -->
	<div class="row">
		<div class="col">
			<div class="container-fluid">
				<p class="text-muted">Información basica</p>
	      		<div class="card card-fluid card-shadow">
	        		<ul class="list-group">
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Nombre
			              		</strong>
			            	</div>
			            	<span><%= @client.name %></span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Condición I.V.A.
			              		</strong>
			            	</div>
			            	<span><%= @client.iva_cond %></span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Documento
			              		</strong>
			            	</div>
			            	<span><%= @client.document_type %>: <%= @client.name %></span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Telefono
			              		</strong>
			            	</div>
			            	<span><%= @client.phone %></span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Celular
			              		</strong>
			            	</div>
			            	<span><%= @client.mobile_phone %></span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Email
			              		</strong>
			            	</div>
			            	<span><%= @client.email %></span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Nacimiento
			              		</strong>
			            	</div>
			            	<span><%= @client.birthday %></span>
			          	</li>
		        		<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		¿Cuenta corriente?
			              		</strong>
			            	</div>
			            	<span><%= boolean_to_icon(@client.valid_for_account) %><%= @client.valid_for_account ? "Si" : "No" %> dispone de cuenta corriente.</span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Recargo
			              		</strong>
			            	</div>
			            	<span><%= @client.recharge %></span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Dirección
			              		</strong>
			            	</div>
			            	<span><%= @client.address %></span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Día de pago
			              		</strong>
			            	</div>
			            	<span><%= @client.payment_day %></span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Saldo
			              		</strong>
			            	</div>
			            	<span>$<%= @client.saldo %></span>
			          	</li>
			          	<li class="list-group-item d-flex justify-content-between lh-condensed">
			            	<div>
			              		<strong class="my-0">
			                		Observación
			              		</strong>
			            	</div>
			            	<span><%= @client.observation %></span>
			          	</li>
		        	</ul>
		        </div>
			</div>
		</div>
		<div class="col">
			<div class="container-fluid">
				<p class="text-muted">Últimos movimientos</p>
	      		<div class="card card-fluid card-shadow" id="amovements">
	      			<% @account_movements = @client.account_movements.order("created_at DESC").paginate(page: params[:page], per_page: 10) %>
	      			<%= render '/clients/account_movements/account_movements_table' %>
	      		</div>
	      	</div>
		</div>
	</div>
</div>