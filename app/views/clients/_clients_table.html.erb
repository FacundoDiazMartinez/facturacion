<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Documento</th>
        <th scope="col">E-mail</th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.full_document %></td>
        <td><%= client.email %></td>
        <td class="text-right">
          <%= link_to icon('fas', 'briefcase'), client_account_movements_path(client.id), class: 'btn btn-sm btn-icon btn-outline-secondary' %>
          <%= link_to icon('fas', 'eye'), client, class: 'btn btn-sm btn-icon btn-outline-secondary' if can? :show, Client %>

          <% if can? :manage, Client %>
            <%= link_to icon('fas', 'edit'), edit_client_path(client), class: 'btn btn-sm btn-icon btn-outline-secondary', data: { toggle: 'modal', target: '#clientModal'}, remote: true %>
            <%= link_to icon('fas', 'trash'), client, method: :delete, data: { confirm: '¿Está seguro de eliminar este cliente?' }, class: 'btn btn-sm btn-icon btn-outline-secondary' %>
          <% end %>
          
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<center>
  <%= paginate @clients %>
</center>
