<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Documento</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Celular</th>
      <th scope="col">E-mail</th>
      <th scope="col">Dirección</th>
      <th scope="col">Nacimiento</th>
      <th scope="col">Cta. Corriente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.full_document %></td>
        <td><%= client.phone %></td>
        <td><%= client.mobile_phone %></td>
        <td><%= client.email %></td>
        <td><%= client.address %></td>
        <td><%= client.birthday %></td>
        <td><%= link_to icon('fas', 'briefcase'), client_account_movements_path(client.id) %></td>
        <td><%= link_to icon('fas', 'eye'), client %></td>
        <td><%= link_to icon('fas', 'edit'), edit_client_path(client) %></td>
        <td><%= link_to icon('fas', 'trash'), client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<center>
  <%= paginate @client %>
</center>