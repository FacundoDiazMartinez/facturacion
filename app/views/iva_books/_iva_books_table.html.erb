<table class="table table-hover">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Comprobante</th>
      <th>Fecha</th>
      <th>Monto neto</th>
      <th>Monto I.V.A.</th>
      <th>Total</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @iva_books.each do |iva_book| %>
      <tr>
        <td><%= iva_book.tipo %></td>
        <td><%= iva_book.full_invoice %></td>
        <td><%= iva_book.date %></td>
        <td><%= iva_book.net_amount %></td>
        <td><%= iva_book.iva_amount %></td>
        <td><%= iva_book.total %></td>
        <% if iva_book.is_credit?  %>
          <td><%= link_to icon('fas', 'eye').html_safe, iva_book.purchase_invoice, class: 'btn btn-sm btn-icon btn-outline-secondary' %></td>
        <% else %>
          <td><%= link_to icon('fas', 'eye').html_safe, iva_book.invoice, class: 'btn btn-sm btn-icon btn-outline-secondary' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @iva_books %>
