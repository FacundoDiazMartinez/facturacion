<% total_page = 0 %>
 <!--  @group_details lo cree en el controlador de iva_books (en el show) con un include de productos. Son los detalles de la factura en grupos de a 20 -->
<% @group_details.each_with_index do |details_page, index| %>
  <div class="alwaysbreak">
    <% total_page = details_page.map {|a| a.total unless a.nil?}.compact.reduce(:+).to_f %>
    <% total_iva_page = details_page.map {|a| a.iva_amount unless a.nil?}.compact.reduce(:+).to_f %>
    <% total_neto_page = details_page.map {|a| a.net_amount unless a.nil?}.compact.reduce(:+).to_f %>
    <%= render template: '/iva_books/pdf_partials/_header.html.erb', :locals => {:from => @from, :to => @to, :type => @type} %>
    <%= render template: '/iva_books/pdf_partials/_details.html.erb', :locals => { :details => details_page, :total_of_page => total_page, :total_iva_of_page => total_iva_page, :total_neto_of_page => total_neto_page} %>
    <%# render template: '/iva_books/pdf_partials/_footer.html.erb', :locals => { :page_number => (index + 1), :total_pages => @group_details.count } %>
  </div>
<% end %>
