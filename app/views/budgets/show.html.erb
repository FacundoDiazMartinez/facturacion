<div class="page-header">
  <%= link_to budgets_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_budget_path(@budget), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show budget</h1>
</div>

<dl class="dl-horizontal">
  <dt>Date:</dt>
  <dd><%= @budget.date %></dd>

  <dt>Expiration date:</dt>
  <dd><%= @budget.expiration_date %></dd>

  <dt>Total:</dt>
  <dd><%= @budget.total %></dd>

  <dt>Active:</dt>
  <dd><%= @budget.active %></dd>

  <dt>Company:</dt>
  <dd><%= @budget.company %></dd>

  <dt>User:</dt>
  <dd><%= @budget.user %></dd>

  <dt>Client:</dt>
  <dd><%= @budget.client %></dd>

  <dt>Reserv stock:</dt>
  <dd><%= @budget.reserv_stock %></dd>

</dl>
