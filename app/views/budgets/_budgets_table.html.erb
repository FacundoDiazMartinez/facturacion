<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Número</th>
                <th scope="col" colspan="2"> <center> Cliente </center> </th>
                <th scope="col">Fecha</th>
                <th scope="col">Vencimiento</th>
                <th scope="col">Estado</th>
                <th scope="col">Total</th>
                <th scope="col">Creado por</th>
                <th scope="col">¿R.Stock?</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            <% @budgets.each do |budget| %>
                <tr>
                    <td><%= budget.number %></td>
                    <td><%= image_tag budget.client.avatar, alt: budget.client.name, class: 'avatar' %></td>
                    <td><%= link_to budget.client.name, client_path(budget.client_id) %></td>
                    <td><%= l(budget.date) %></td>
                    <td><%= budget.expiration_date %></td>
                    <td><%= state_label_helper_budget(budget) %></td>
                    <td>$<%= budget.total %></td>
                    <td><%= link_to budget.user.name, user_path(budget.user_id) %></td>
                    <td><%= stock_label_helper_budget(budget) %>
                    <td>
                        <%= link_to icon('fas', 'eye').html_safe, budget_path(budget.id, format: :pdf), target: '_blank', class: 'btn btn-sm btn-icon btn-outline-secondary' %>
                        <%= link_to icon('fas', 'edit').html_safe, edit_budget_path(budget.id), class: 'btn btn-sm btn-icon btn-outline-secondary' %>
                        <%= link_to icon('fas', 'trash').html_safe, budget, method: :delete, data:{confirm: "¿Está seguro?"}, class: 'btn btn-sm btn-icon btn-outline-secondary' %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
