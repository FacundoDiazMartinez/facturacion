<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Proveedor</th>
                <th>Alicuota I.V.A.</th>
                <th>Stock disponible</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        	<% @product_categories.each do |product_category| %>
        		<tr>
        			<td><%= product_category.name %></td>
                    <td><%= product_category.supplier_name %></td>
        			<td><%= product_category.iva %></td>
        			<td><%= product_category.products_count %></td>
                    <td class="text-right">
                        <%= link_to icon('fas', 'pencil-alt').html_safe, edit_product_category_path(product_category), class: 'btn btn-sm btn-icon btn-outline-secondary', data:{target: '#product_category_modal', toggle: 'modal', remote: true} if can? :update, ProductCategory %>
                        <%= link_to icon('fas', 'trash'), product_category, method: :delete, data: {confirm: 'Â¿Estas seguro?'}, class: 'btn btn-sm btn-icon btn-outline-secondary' %>
                    </td>

        		</tr>
        	<% end -%>
        </tbody>
    </table>
</div>
<%= paginate @product_categories %>
