<%= form_for @product_category, remote: true do |f| %>
  <div class="modal-body">
    <div id="errors">
      <%= error_explanation @product_category %>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'form-control', required: true %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :supplier_id %>
        <%= f.select :supplier_id, options_for_select(current_user.company.suppliers.map{|s| [s.name, s.id]}), { include_blank: "Sin proveedor especÃ­fico" }, { :class => 'form-control' } %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :iva_aliquot %>
        <%= f.select :iva_aliquot, options_for_select(Afip::ALIC_IVA.map{|iva, id| [id, iva]}, "05"), {}, { class: 'form-control' } %>
      </div>
    </div>


  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
    <%= save_button %>
  </div>
<% end %>
