<%= form_for @product_category, remote: true do |f| %>
  <div class="modal-body">
    <% if product_category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product_category.errors.count, "error") %> prohibited this product_category from being saved:</h2>

        <ul>
        <% product_category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= f.label :name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => 'form-control', placeholder: "Nombre", required: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :iva_aliquot, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.select :iva_aliquot, options_for_select(Afip::ALIC_IVA.map{|iva, id| [id, iva]}, "05"), {}, {class: 'form-control'} %>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
    <%= save_button %>
  </div>
<% end %>