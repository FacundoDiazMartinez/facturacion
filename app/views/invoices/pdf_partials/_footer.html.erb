<!-- PIE DE PAGINA -->
<br>
<div class="row footer_bottom">
  <% if @invoice.company.invoice_footer.length > 0 %>
    <div class="container" style="border-style: dotted; border-width: 1px; padding-right: 10px; padding-left: 10px; height:80px; overflow: hidden; font-size: 10px !important;">
      <%= @invoice.company.invoice_footer.html_safe %>
    </div>
  <% end %>

  <div class="container">
    <table class="width_100">
      <tr>
        <td rowspan="2" style="width: 33%;"> <br> <center> <%= wicked_pdf_image_tag '/images/afip.png',:width => "150"%> </center></td>

        <td rowspan="2" style="width: 20% !important;">
          <b>
            <center>
              <% if @invoice.check_authorized_invoice %>
                <% barcode = Barby::Code25Interleaved.new(@invoice.code_numbers(@invoice.code_hash)) %>
                <% outputter = Barby::PngOutputter.new(barcode) %>
                <% file = File.open(@barcode_path,'wb') {|f| f.write barcode.to_png(xdim: 1, height: 30) } %>
                <%= image_tag(@barcode_path, class: "img-responsive") %>
              <% else %>
                -- Comprobante NO Autorizado --
                <% if !@invoice.cae.blank? %>
                  <%# barcode = Barby::Code25Interleaved.new(@invoice.code_numbers(@invoice.code_hash)) %>
                  <%# outputter = Barby::PngOutputter.new(barcode) %>
                  <%# file = File.open(@barcode_path,'wb') {|f| f.write barcode.to_png(xdim: 1, height: 35) } %>
                  <%#= image_tag(@barcode_path, class: "img-responsive") %>
                  <% barcode = Barby::Code25Interleaved.new(@invoice.code_numbers(@invoice.code_hash)) %>
                  <% bar_png = barcode.to_png(xdim:1, height: 30) %>
                  <% image = Base64.encode64(bar_png.to_s).gsub(/\s+/, "") %>
                  <%= image_tag "data:image/png;base64,#{Rack::Utils.escape(image)}" %>
                  <%= barcode.to_s %>
                <% end %>
              <% end %>
            </center>
          </b>
        </td>

        <td style="width: 33%;" class="text_right"><b>CAE N°:</b> <%= @invoice.cae %> </td>
      </tr>

      <tr>
        <!-- <td></td>
        <td></td> Comentado por los ROWSPAN de arriba  -->
        <td class="text_right"><b>Fecha de Vto. de CAE: </b><%= Date.strptime(@invoice.cae_due_date , "%Y%m%d") %> </td>
      </tr>
    </table>
  </div>

  <div class="container border">
    <br>
    <table class="width_100">
      <col>
      <col width="450">
      <col>
      <tr>
        <td rowspan="3" style="width: 1px;"></td>
        <td><b>Móvil:</b></td>
        <td><b>Aclaración:</b></td>
      </tr>
      <tr>
        <td colspan="2"> <br> </td>
      </tr>
      <tr>
        <td><b>Firma:</b></td>
        <td><b>DNI:</b></td>
      </tr>
      <tr>
        <td colspan="2"> <br> </td>
      </tr>
    </table>
  </div>
</div>
<div class="text_center" style="padding: 25px;">
  Página <%= page_number %> de <%= total_pages%>
</div>
<!-- FIN PIE DE PAGINA -->
