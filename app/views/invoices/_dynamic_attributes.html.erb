<div class="col-md-4">
	<div class="form-group">
      	<%= form.label :state %>
      	<%= form.text_field :state, class: 'form-control', readonly: true %>
    </div>
</div>
<div class="col-md-4">
	<% if @invoice.concepto != "Productos" && !@invoice.concepto.nil? %>
		<div class="row">
			<div class="col">
		      	<%= form.label :fch_serv_desde %>
		      	<%= form.text_field :fch_serv_desde, class: 'form-control datepicker', disabled: !@invoice.editable? %>
		    </div>
		    <div class="col">
		      	<%= form.label :fch_serv_hasta %>
		      	<%= form.text_field :fch_serv_hasta, class: 'form-control datepicker', disabled: !@invoice.editable? %>
		    </div>
	    </div>
	<% else %>
		<div class="form-group">
	      	<%= form.label :cbte_fch %>
	      	<%= form.text_field :cbte_fch, class: 'form-control', readonly: true %>
	    </div>
	<% end %>
</div>
<div class="col-md-4">
	<div class="form-group">
		<%= form.label :associated_invoice %>
		<%= form.hidden_field :associated_invoice %>
		<%= form.autocomplete_field :associated_invoice, autocomplete_associated_invoice_invoices_path, class: 'form-control associated-invoice-autocomplete_field', placeholder: "Ingrese NÂº de factura", required: !@invoice.is_invoice?, disabled: @invoice.is_invoice?, autofocus: true %>
	</div>
</div>

<script type="text/javascript">
	$('.datepicker').datepicker({
	      language: "es",
	      dateFormat: "dd/mm/yyyy",
	      todayHighlight: true,
	      autoclose: true,
	});
</script>