<div class="col-md-4">
	<div class="form-group row">
	  	<%= form.label :state, class:'col-4 col-form-label col-form-label-sm' %>
	  	<div class="col-8">
	  		<%= form.text_field :state, class: 'form-control', readonly: true %>
	  	</div>
	</div>
</div>
<div class="col-md-4">
	<% if @invoice.concepto != "Productos" && !@invoice.concepto.nil? %>
		<div class="form-group row">
			<%= label_tag :fecha, "Fecha", class:'col-4 col-form-label col-form-label-sm' %>
		    <div class="col-4">
		      	<%= form.text_field :fch_serv_desde, class: 'form-control datepicker', placeholder: "Desde", disabled: !@invoice.editable? %>
		    </div>
		    <div class="col-4">
		      	<%= form.text_field :fch_serv_hasta, class: 'form-control datepicker', placeholder: "Hasta", disabled: !@invoice.editable? %>
		    </div>
	    </div>
	<% else %>
		<div class="form-group row">
	      	<%= form.label :cbte_fch, "Fecha", class:'col-4 col-form-label col-form-label-sm' %>
	      	<div class="col-8">
	      		<%= form.text_field :cbte_fch, class: 'form-control', readonly: true %>
	      	</div>
	    </div>
	<% end %>
</div>
<div class="col-md-4">
	<div class="form-group row">
		<%= form.label :associated_invoice, "Factura asociada", class:'col-4 col-form-label col-form-label-sm' %>
		<div class="col-8">
			<%= form.autocomplete_field :associated_invoice, autocomplete_associated_invoice_invoices_path, class: 'form-control associated-invoice-autocomplete_field', placeholder: "Ingrese NÂº de factura", required: !@invoice.is_invoice?, disabled: @invoice.is_invoice?, autofocus: true %>
			<%= form.hidden_field :associated_invoice %>
		</div>
	</div>
</div>

<script type="text/javascript">
	$('.datepicker').datepicker({
	      language: "es",
	      dateFormat: "dd/mm/yyyy",
	      todayHighlight: true,
	      autoclose: true,
	});
</script>