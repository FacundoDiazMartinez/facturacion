<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Tipo de comprobante</th>
        <th>Total</th>
        <th>Estado</th>
        <th>Fecha</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.client.name %></td>
        <td><%= invoice.tipo %></td>
        <td><%= invoice.total %></td>
        <td><%= invoice.state %></td>
        <td><%= invoice.cbte_fch %></td>
        <td class="text-right">
          <%= link_to icon('fas', 'eye').html_safe, invoice, class: 'btn btn-sm btn-icon btn-outline-secondary' %>
          <%= link_to icon('fas', 'pencil-alt').html_safe, edit_invoice_path(invoice), class: 'btn btn-sm btn-icon btn-outline-secondary' %>
          <%= link_to icon('fas', 'trash').html_safe, invoice, method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-sm btn-icon btn-outline-secondary' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @invoices %>
