<%= form_for @advertisement, html:{class: 'directUpload', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host}} do |form| %>
  <%= error_explanation @advertisement %>

    <div class="card">
      <div class="card-body">

        <div class="row">
          <div class="col-sm">
            <div class="form-group">
              <%= form.label :state %>
              <%= form.text_field :state, class: 'form-control', disabled: true %>
            </div>
          </div>
          <div class="col-sm">
            <div class="form-group">
              <%= form.label :delivery_date %>
              <%= form.text_field :delivery_date, class: 'form-control datepicker', required: true, disabled: !@advertisement.editable? %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control', required: true, disabled: !@advertisement.editable? %>
        </div>
        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, class: 'form-control', disabled: !@advertisement.editable?%>
        </div>

        <div class="form-group">
          <div class="col-md-4 offset-md-4">
            <center>
              <%= form.label :image1 %>
            </center>
            <div class="card mb-4 card-shadow">
              <div class="comp_container caption captionload">
                <img src="/images/load.gif" width="100%">
              </div>
              <img class="card-img-top" src="<%= @advertisement.image1 %>" alt="AÃ±adir foto" id="image" width="40%">
              <div hidden>
                <%= form.file_field :image1, :class => 'form-control', id: 'file_input' %>
              </div>
            </div>
          </div>

        </div>


        <center>
          <% if @advertisement.state == "No enviado" && current_user.has_advertisement_management_role? && @advertisement.persisted? %>
            <%= link_to "#{icon('fas', 'eraser ')} Anular".html_safe, cancel_advertisement_path(@advertisement.id), method: :patch, class: 'btn btn-danger' %>
            <%= button_tag "#{icon('fas', 'envelope ')} Enviar".html_safe, type: 'button', onclick: 'sendAdvertisement()', class: 'btn btn-primary' %>
          <% end %>
          <% if !@advertisement.persisted? %>
            <%= save_button_lock %>
          <% end %>
        </center>

      </div>
    </div>


<% end %>


<div class="modal fade bd-example-modal-lg" id="clientModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div id="client_modal">
      </div>
    </div>
  </div>
</div>

