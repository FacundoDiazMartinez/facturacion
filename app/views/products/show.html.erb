<div class="container-fluid justify-flex-content p-4 light-dark-background">
  <div class="form-group">
    <%= image_tag @product.photo, alt: @product.photo, style: 'max-height:150px; max-width:300px;', class: 'rounded-circle' %>
  </div>
  <div class="form-group">
    <center>
      <h4>
        <%= @product.name %>
      </h4>
      <h6>
        <small>
          <strong> Código: </strong><%= @product.code %>
        </small>
      </h6>
    </center>
  </div>
</div>
<% if can? :update, Product %>
	<%= button_edit_helper(edit_product_path(@product.id)) %>
<% end %>
<div class="p-4">
		<div class="container-fluid">
		  	<div class="row">
		    	<div class="col-md-6">
		    		<p class="text-muted">Información basica</p>
		      		<div class="card card-fluid ">
		        		<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between lh-condensed">
				            	<div>
				              		<strong class="my-0">
				                		Medida
				              		</strong>
				            	</div>
				            	<span><%= @product.full_measurement %></span>
				          	</li>
							<li class="list-group-item d-flex justify-content-between lh-condensed">
				            	<div>
				              		<strong class="my-0">
				                		Categoría
				              		</strong>
				            		</div>
				            		<span><%= @product.category_name %></span>
				          	</li>
				          	<li class="list-group-item d-flex justify-content-between lh-condensed">
				            	<div>
				              		<strong class="my-0">
				                		Proveedor
				              		</strong>
				            		</div>
				            		<span><%= @product.supplier_name %></span>
				          	</li>
				          	<li class="list-group-item d-flex justify-content-between lh-condensed">
				            	<div>
				              		<strong class="my-0">
				                		Código de proveedor
				              		</strong>
				            	</div>
				            	<span><%= @product.supplier_code %></span>
				          	</li>
							<li class="list-group-item d-flex justify-content-between lh-condensed">
				            	<div>
				              		<strong class="my-0">
				                		Stock disponible
				              		</strong>
				           		</div>
				            	<span><%= @product.available_stock %></span>
				          	</li>
						</ul>
					</div>
				</div>

				<div class="col-md-6">
					<p class="text-muted">Información sobre el precio</p>
					<div class="card card-fluid ">
				        <ul class="list-group">
				          	<li class="list-group-item d-flex justify-content-between lh-condensed">
				            	<div>
				              		<strong class="my-0">
				                		Precio de costo
				              		</strong>
				            	</div>
				            	<span>$<%= @product.cost_price %></span>
				          	</li>
							<li class="list-group-item d-flex justify-content-between lh-condensed">
								<div>
									<strong class="my-0">
										Ganancia
									</strong>
								</div>
								<span><%= @product.gain_margin %>%</span>
							</li>
							<li class="list-group-item d-flex justify-content-between lh-condensed">
	            	<div>
	              		<strong class="my-0">
	                		Precio bruto
	              		</strong>
	            	</div>
	            	<span>$<%= @product.net_price %></span>
	          	</li>
							<li class="list-group-item d-flex justify-content-between lh-condensed">
	            	<div>
	              		<strong class="my-0">
	                		Alícuota IVA
	              		</strong>
	            	</div>
	            	<span><%= @product.iva %>%</span>
	          	</li>
							<li class="list-group-item d-flex justify-content-between lh-condensed">
	            	<div>
                		<strong class="my-0">
	                		Precio final
	              		</strong>
	            	</div>
	            	<span>$<%= @product.price %></span>
	          	</li>
						</ul>
					</div>
				</div>
			</div>
		</div>

	<%= render 'stock' %>
	
</div>
