<!-- DETALLE -->
<div class="row">
  <br>
  <div class="container" style="height: 820px;">
    <table class="width_100 TFtable">
      <tr>
        <th class="text_left">Observación: </th>
      </tr>
      <tr>
        <td class="bg-white"><%= @receipt.concept %></td>
      </tr>
    </table>

    <br>
    <br>
    <hr>
    <br>

    <% if !@receipt.invoices.blank? %>
      <table class="width_100 TFtable">
        <tr>
          <th class="text_left">
            Recibimos en concepto de:
          </th>
        </tr>
        <% @receipt.invoices.each do |i| %>
          <tr class="bg-white">
            <td>
              <% if i.total_left > 0 %>
              Pago parcial Factura <%= i.full_number %>  -  Importe $ <%= i.total %>
              <% else %>
                <% if i.total_left == 0 %>
                  Cancelación Factura <%= i.full_number %>  -  Importe $ <%= i.total %>
                <% end %>
              <% end %>
            </td>
          </tr>
          <% i.notes.each do |n| %>
            <tr class="text_left bg-white">
              <td>
                Vinculación <%= n.nombre_comprobante %> <%= n.full_number %> - Importe $ <%= n.total %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </table>
    <% end %>

    <br>
    <br>

      <table class="width_100 TFtable">
        <tr>
          <th class="text_left">Forma de pago</th>
        </tr>
        <% @receipt.account_movement.income_payments.where(generated_by_system: false).each do |ip| %>
          <tr class="bg-white">
            <td>
              <% if ip.type_of_payment == "4" %>
                <%= ip.payment_name %> [ <%= ip.cheque_payment.number %> ] - Fecha de pago <%= ip.payment_date %> - Importe $ <%= ip.total %>
              <% else %>
                <%= ip.payment_name %> - Fecha de pago <%= ip.payment_date %> - Importe $ <%= ip.total %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
  </div>
</div>
<!-- FIN DEL DETALLE -->

<div class="row footer_top">
  <div class="container border">
    <table class="width_100">
      <col width="600">
      <col width="100">
      <tr>
        <td class="text_right"><b>Importe Total:</b></td>
        <td class="text_right"><b>$ <%= @receipt.total %></b></td>
      </tr>
    </table>
  </div>
</div>
<p><b>Recibi la suma de: </b></p>
<p><%= I18n.with_locale(:es) { @receipt.total.to_words }.capitalize %> pesos con <%= I18n.with_locale(:es) { (@receipt.total % 1).to_words } %> centavos.</p>
