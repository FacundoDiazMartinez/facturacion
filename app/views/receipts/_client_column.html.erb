<div class="form-group">
  <%= label_tag :receipt_client_name, "Cliente" %>
  <div class="input-group">
    <%= text_field_tag :receipt_client_name, @client.name, class: 'form-control', readonly: true %>
    <div class="input-group-append">
      <% if !@receipt.editable? %>
        <%= link_to icon('far', 'eye').html_safe, receipts_client_path(@client.id), data: {toggle: 'modal', target: '#clientModal', remote: true}, class: 'input-group-text' %>
      <% else %>
        <%= link_to icon('far', 'edit').html_safe, edit_receipts_client_path(@client.id, receipt_id: @receipt.id), data: {toggle: 'modal', target: '#clientModal', remote: true}, class: 'input-group-text',id: 'editReceiptClient' %>
      <% end %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= label_tag :invoice_client_iva_cond, "Condicion I.V.A." %>
  <%= text_field_tag :invoice_client_iva_cond, @client.iva_cond, class: 'form-control', readonly: true, data_toggle:"tooltip", title:@client.iva_cond %>
</div>
