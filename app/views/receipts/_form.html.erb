<%= form_with(model: receipt, local: true) do |form| %>
  <% if receipt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(receipt.errors.count, "error") %> prohibited this receipt from being saved:</h2>

      <ul>
      <% receipt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= form.hidden_field :company_id, value: current_user.company_id %>

<div class="card shadow">
  <div class="card-body">
    <div class="row">
      <!-- PRIMERA COLUMNA -->
        <div class="col-sm">
          <div class="form-group">
            <%= form.label :invoice_id, "Factura" %>
            <%= autocomplete_field_tag :invoice_comp_number, params[:invoice_comp_number] || form.object.invoice_comp_number, autocomplete_invoice_receipts_path, class: 'form-control receipt_associated-invoice-autocomplete_field', id_element: "#receipt_invoice_id", placeholder: "Número de Factura", disabled: !@receipt.editable? %>
            <%= form.hidden_field :invoice_id %>
          </div>
          <div class="form-group">
            <%= form.label :date, "Fecha" %>
            <%= form.text_field :date, class: 'form-control datepicker', required: true, disabled: !@receipt.editable? %>
          </div>
          <div class="form-group">
            <%= form.label :observation, "Observación" %>
            <%= form.text_area :observation, class: 'form-control', rows: 1 , disabled: !@receipt.editable?%>
          </div>
        </div>
      <!-- FIN PRIMERA COLUMNA  FALTA TOTAL-->

      <!-- SEGUNDA COLUMNA -->
        <div class="col-sm">
          <div id="client_form">
            <%= render 'client_column' %>
          </div>
          <%= form.hidden_field :client_id, value: @client.id %>
          <div class="form-group">
            <%= form.label :sale_point_id, "Punto de venta", required: true %>
            <%= form.select :sale_point_id, options_for_select(current_user.company.sale_points.map{|sp| [sp.name, sp.id]}, @receipt.sale_point_id), {}, {class: 'form-control', disabled: !@receipt.editable?} %>
          </div>
          <div class="form-group">
            <br>
            <center>
              <%= save_button %>
            </center>
          </div>
        </div>
      <!-- SEGUNDA COLUMNA -->

      <!-- TERCERA COLUMNA -->
        <div class="col-sm">
          <div class="form-group">
            <%= form.label :number, "Número de recibo" %>
            <%= form.text_field :number, class: 'form-control', required: true , disabled: !@receipt.editable?%>
          </div>
          <div class="form-group">
            <%= form.label :total, "Total: " %>
            <%= form.number_field :total, class: 'form-control', required: true, disabled: !@receipt.editable? %>
          </div>
        </div>
      <!-- TERCERA COLUMNA -->
    </div>
</div>
<% end %>

<div class="modal fade bd-example-modal-lg" id="clientModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div id="client_modal">
      </div>
    </div>
  </div>
</div>