<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Client</th>
      <th>Active</th>
      <th>Total</th>
      <th>Date</th>
      <th>Observation</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.invoice %></td>
        <td><%= receipt.client %></td>
        <td><%= receipt.active %></td>
        <td><%= receipt.total %></td>
        <td><%= receipt.date %></td>
        <td><%= receipt.observation %></td>
        <td><%= receipt.company %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

