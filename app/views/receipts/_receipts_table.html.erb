    </thead>

    <tbody>
      <% @receipts.each do |receipt| %>
        <tr>
          <td><strong><%= receipt.number %></strong></td>
          <td><%= receipt.date %></td>
          <td><%= receipt.tipo %></td>
          <td><%= invoices_with_link(receipt) %></td>
          <td><%= link_to receipt.client.name, client_path(receipt.client_id) %></td>
          <td>$<%= receipt.total %></td>
          <td><%= link_to icon('fas', 'eye').html_safe, receipt_path(receipt.id, format: :pdf), target: '_blank', class: 'btn btn-sm btn-icon btn-outline-secondary' %></td>
          <!-- <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
          <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @receipts %>
