<% nested_form_for @invoice do |f|
    @builder = f
  end %>

$("#idetails").html("<%= j render( partial: '/sales/invoices/details', locals: { form: @builder, invoice: @invoice }) %>");
$("#ibonifications").html("<%= j render( partial: '/sales/invoices/bonifications', locals: { form: @builder, invoice: @invoice }) %>");
<% unless @invoice.new_record? %>
$("#ipayments").html("<%= j render( partial: '/sales/invoices/payments', locals: { form: @builder, invoice: @invoice }) %>");
<% end %>
$("#itaxes").html("<%= j render( partial: '/sales/invoices/taxes', locals: { form: @builder, invoice: @invoice }) %>");
$("#dynamic_attributes").html("<%= j render( partial: '/sales/invoices/dynamic_attributes', locals: { form: @builder }) %>");
checkNotaDebito();
