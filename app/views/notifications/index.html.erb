<div class="card">
  <div class="card-header"><%= icon('fas', 'bell') %> Notificaciones</h3>
  </div>
  <div class="card-body">
  	<ul>
  		<% @notifications.each do |notification| %>
  			<a href="<%= notification.link %>">
	  			<div class="row">
		  			<div class="col-md-2 col-sm-2">
		  				<img src="<%= notification.receiver.photo %>" class="img-responsive">
		  			</div>
		  			<div class="col-md-10 col-sm-10">
		  				<h5 class="card-title"><strong><%= notification.title %></strong></h5>
		  				<div class="notification"><%= notification.body %></div>
		  				<small><%= icon('fas', 'time') %> Hace <%= distance_of_time_in_words(Time.now ,notification.created_at.to_time) %></small>
		  			</div>
		  		</div>
		  	</a>
	  		<hr>
  		<% end %>
  	</ul>
  </div>
</div>