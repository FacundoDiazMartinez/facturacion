<div class="p-4">
  <ul class="nav justify-content-center">
    <li class="nav-item bg-light rounded-left border">
      <%= link_to "Caja Chica #{icon('fas', 'money-bill-alt')}".html_safe, daily_cashes_path, data: { "skip-pjax": true }, class: 'text-dark nav-link', title: 'caja diaria' %>
    </li>
    <li class="nav-item bg-light border">
      <%= link_to "Caja Diaria #{icon('fas', 'money-bill-alt')}".html_safe, general_payments_daily_cashes_path(), data: { "skip-pjax": true }, class: 'text-white nav-link bg-secondary', title: "Información caja general" %>
    </li>
    <li class="nav-item bg-light border">
      <%= link_to "Tarjetas #{icon('fas', 'credit-card')}".html_safe, payments_card_payments_path(), data: { "skip-pjax": true }, class: 'text-dark nav-link', title: "Información de tarjetas de crédito" %>
    </li>
    <li class="nav-item bg-light border">
      <%= link_to "Cheques #{icon('fas', 'file-signature')}".html_safe, payments_cheque_payments_path(), data: { "skip-pjax": true }, class: 'text-dark nav-link', title: "Información de tarjetas de crédito" %>
    </li>
    <li class="nav-item bg-light rounded-right border">
      <%= link_to "Banco #{icon('fas', 'university')}".html_safe, payments_bank_payments_path(), data: { "skip-pjax": true }, class: 'text-dark nav-link', title: "Información de movimientos bancarios" %>
    </li>
    <li class="nav-item bg-light rounded-right border">
      <%= link_to "Retenciones #{icon('fas', 'university')}".html_safe, payments_retention_payments_path(), data: { "skip-pjax": true }, class: 'text-dark nav-link', title: "Información de retenciones" %>
    </li>
  </ul>
  <hr>
  <div>
    <h6>
      Solamente se reflejan los pagos correspondientes a facturas confirmadas
    </h6>
  </div>
  <hr>

  <div class="row">
    <div class="col-6">
      <div class="card">
        <div class="card-body" style="background-color: darkgray;">
          <h4>
            <strong>Saldo HOY:
              <span class="float-right">
                $ <%= (@contado + @cheques + @tarjetas + @transferencias + @retention_payment_total).round(2) %>
              </span>
            </strong>
          </h4>
        </div>
        <div class="card-body">
          <h4>
            <strong>Contado:
              <span class="float-right">
                $ <%= (@contado).round(2) %>
              </span>
            </strong>
          </h4>
        </div>
        <div class="card-body">
          <h4>
            <strong>Cheques:
              <span class="float-right">
                $ <%= (@cheques).round(2) %>
              </span>
            </strong>
          </h4>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <h4>
            <strong>Tarjetas:
              <span class="float-right">
                $ <%= (@tarjetas).round(2) %>
              </span>
            </strong>
          </h4>
        </div>
        <div class="card-body">
          <h4>
            <strong>Bancos:
              <span class="float-right">
                $ <%= (@transferencias).round(2) %>
              </span>
            </strong>
          </h4>
        </div>
        <div class="card-body">
          <h4>
            <strong>Retenciones:
              <span class="float-right">
                $ <%= (@retention_payment_total).round(2) %>
              </span>
            </strong>
          </h4>
        </div>
      </div>
    </div>
  </div>

  <div class="page-section">
    <div class="card card-fluid">

      <div class="card-header">
        <%= form_tag general_payments_daily_cashes_path(), {class: 'form-inline', id: 'search_form'} do %>

          <!-- BUSCAR POR TIPO -->
          <div class="input-group col-6">
            <div class="input-group-prepend">
              <div class="input-group-text"><%= icon('fas', 'user') %></div>
            </div>
            <%= select_tag :type_of_payment, options_for_select(Payment::GENERALPAYMENTS.map{|u,v| [v,u]}), {prompt: 'Buscar por tipo de pago...', class: 'form-control', onchange: 'remoteSubmit("#search_form")'} %>
          </div>
          <!-- BUSCAR POR TIPO -->
          <!-- BUSCAR POR FECHA -->
          <div class="input-group col-6">
            <div class="input-group-prepend">
              <div class="input-group-text"><%= icon('fas', 'calendar') %></div>
            </div>
            <%= text_field_tag :date, params[:date], class: 'form-control datepicker', placeholder: 'Buscar por fecha...', onchange: 'remoteSubmit("#search_form")' %>
          </div>
          <!-- BUSCAR POR FECHA -->
        <% end %>
      </div>

      <div id="general_payments_table" class="card-body">
        <!-- MOVIMIENTOS ASOCIADOS -->
        <%= render '/daily_cashes/general_payments_table' %>
        <!-- MOVIMIENTOS ASOCIADOS -->
      </div>

    </div>
  </div>
</div>
