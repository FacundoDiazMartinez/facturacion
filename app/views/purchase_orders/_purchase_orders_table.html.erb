<table class="table table-hover">
  <thead>
    <tr>
      <th>Número</th>
      <th>Proveedor</th>
      <th>Creado por</th>
      <th>Total</th>
      <th>Estado</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><strong><%= purchase_order.number %></strong></td>
        <td><%= purchase_order.supplier.name %></td>
        <td><%= purchase_order.user.name %></td>
        <td><%= purchase_order.total %></td>
        <td><%= purchase_order.state %></td>
        <td><%= purchase_order.created_at %></td>
        <td><%= link_to icon('fas', 'eye').html_safe, purchase_order %></td>
        <td><%= link_to icon('fas', 'edit').html_safe, edit_purchase_order_path(purchase_order.id) %></td>
        <td><%= link_to icon('fas', 'trash').html_safe, purchase_order, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @purchase_orders %>