<p id="notice"><%= notice %></p>

<h1>Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th>Supplier</th>
      <th>Observation</th>
      <th>Total</th>
      <th>Total pay</th>
      <th>User</th>
      <th>Shipping</th>
      <th>Shipping cost</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= purchase_order.state %></td>
        <td><%= purchase_order.supplier %></td>
        <td><%= purchase_order.observation %></td>
        <td><%= purchase_order.total %></td>
        <td><%= purchase_order.total_pay %></td>
        <td><%= purchase_order.user %></td>
        <td><%= purchase_order.shipping %></td>
        <td><%= purchase_order.shipping_cost %></td>
        <td><%= purchase_order.company %></td>
        <td><%= link_to 'Show', purchase_order %></td>
        <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
        <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Purchase Order', new_purchase_order_path %>
