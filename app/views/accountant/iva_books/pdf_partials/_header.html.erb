<!--ENCABEZADO NOMBRE - TIPO - FACTURA-->
    <div class="border">
      <table class="width_100">
        <tr>
          <td style="width:33%;"> &nbsp <%= wicked_pdf_image_tag current_user.company.logo.gsub('https', 'http'), width: "100px", float: "left"  %></td>
          <td style="width:34%;">
            <center>
              <h2 class="text-lg">
                <% case @type
                when "Crédito Fiscal" %>
                  LIBRO I.V.A. COMPRAS
                <% when "Débito Fiscal" %>
                  LIBRO I.V.A. VENTAS
                <% end %>
                <br>
                Empresa: <%= current_user.company.name %>
              </h2>
            </center>
          </td>
          <td style="width:33%;"></td>
        </tr>
      </table>

    </div>


    <div class="side_borders" style="border-bottom: 1px solid black;">
      <br>

      <table class="width_100">
        <tr>
          <td><b>Período comprendido entre:</b> <%= @from %> y <%= @to %></td>
          <td><b>Fecha de emisión:</b> <%= DateTime.now.to_date %></td>
        </tr>
        <tr>
          <td><b>Libro I.V.A. correspondiente a:</b> <%= @type %></td>
          <td><b>Razón Social: </b><%= current_user.company.society_name %></td>
        </tr>
      </table>

      <br>
    </div>

  <!-- FIN DEL ENCABEZADO -->
