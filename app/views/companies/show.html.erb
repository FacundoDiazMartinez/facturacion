<h1 class="d-flex mb-2">
  <div class="p-2">
    <%= image_tag @company.logo, alt: @company.name, class: 'mini-logo' %>
    <%= @company.name %>
  </div>
  <div class="ml-auto p-2">
    <%= link_to "#{icon('fas', 'chevron-left')} Volver".html_safe, :back, class: 'btn btn-danger' %>
    <%= link_to "#{icon('fas', 'edit')} Editar".html_safe, edit_company_path(@company.id), class: 'btn btn-primary ' %>
  </div>
</h1>

<hr>