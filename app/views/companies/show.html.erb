<div class="d-flex flex-column justify-content-center mb-3">
  <div class="text-center py-3">
    <%= image_tag current_company.logo, alt: current_company.name, style: 'width:200px;' %>
  </div>
  <div class="text-center">
    <h4 class="text-regular">
      <%= current_company.name %>
    </h4>
    <p class="text-muted">
      <%= current_company.society_name %>
    </p>
  </div>
</div>

<%= button_edit_helper(edit_company_path(current_company.id)) if can? :edit, Company %>

<div class="mb-3">
  <ul class="nav-view justify-content-center">
    <li class="nav-view-item general">
      <%= link_to "General", company_path(current_company, company_view: 'info'), remote: true %>
    </li>
    <li class="nav-view-item personal">
      <%= link_to "Personal", company_path(current_company, company_view: 'users'), remote: true %>
    </li>
    <li class="nav-view-item actividades">
      <%= link_to "Actividades", company_path(current_company, company_view: 'activities'), remote: true %>
    </li>
  </ul>
</div>

<div id="show_section" class="py-4">
  <% params[:company_view] ||= "info" %>
  <%= render "/companies/partial_show_views/#{params[:company_view]}" %>
</div>
