<div class="d-flex flex-column justify-content-center">
  <div class="text-center py-3">
    <%= image_tag @company.logo, alt: @company.name, style: 'width:200px;' %>
  </div>
  <div class="text-center">
    <h4 class="text-bold text-regular">
      <%= @company.name %>
    </h4>
    <p class="text-muted">
      <%= @company.society_name %>
    </p>
  </div>
</div>

<%= button_edit_helper(edit_company_path(@company.id)) if can? :edit, Company %>

<div class="pt-1">
  <ul class="nav nav-border justify-content-center display-menu">
    <li class="nav-item info">
      <%= link_to "General", company_path(@company, company_view: 'info'), id: 'info-tab', remote: true, class: 'nav-link active', data: { toggle: 'tab' } %>
    </li>
    <li class="nav-item users">
      <%= link_to "Personal", company_path(@company, company_view: 'users'), id: 'users-tab', remote: true, class: 'nav-link', data: { toggle: 'tab' } %>
    </li>
    <li class="nav-item activities">
      <%= link_to "Actividades", company_path(@company, company_view: 'activities'), id: 'activities-tab', remote: true, class: 'nav-link', data: { toggle: 'tab' } %>
    </li>
  </ul>
</div>

<div id="show_section" class="light-background border-top py-4">
  <%= render '/companies/partial_show_views/info' %>
</div>
