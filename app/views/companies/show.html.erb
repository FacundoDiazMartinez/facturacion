  <dd><%= @company.logo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:society_name) %>:</strong></dt>
  <dd><%= @company.society_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cuit) %>:</strong></dt>
  <dd><%= @company.cuit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:concepto) %>:</strong></dt>
  <dd><%= @company.concepto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:moneda) %>:</strong></dt>
  <dd><%= @company.moneda %></dd>
  <dt><strong><%= model_class.human_attribute_name(:iva_cond) %>:</strong></dt>
  <dd><%= @company.iva_cond %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @company.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @company.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
