<% if can? :see_personal, Company %>
<div class="row d-flex align-items-stretch">
  <% @users.each do |user| %>
  <div class="col-xs-12 col-md-6 col-lg-3 mb-4">
    <div class="card " style="height:100%;">
      <%= link_to user_path(user) do %>
      <div class="card-div-img-top" style="background: url('<%= user.avatar %>')">
			</div>
      <div class="card-body">
        <h6 class="card-title"><%= user.name %></h6>
        <h6><small><%= user.email %></small></h6>
        <h6><small><%= user.role_label %></small></h6>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>

