<%= form_with(model: supplier, remote: true) do |form| %>
  <div class="modal-body">
    <div id="supplier_errors"></div>
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control form-control-sm' %>
        </div>

        <div class="form-group">
          <%= form.label :document_number %>
          <div class="input-group">
            <div class="input-group-prepend">
              <%= form.select :document_type, Afip::DOCUMENTOS, {}, {class: 'form-control form-control-sm input-group-text'} %>
            </div>
            <%= form.text_field :document_number, class: 'form-control form-control-sm', required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :titular %>
          <%= form.text_field :titular, class: 'form-control form-control-sm' %>
        </div>

        <div class="form-group">
          <%= form.label :phone %>
          <%= form.text_field :phone, class: 'form-control form-control-sm' %>
        </div>

        <div class="form-group">
          <%= form.label :mobile_phone %>
          <%= form.text_field :mobile_phone, class: 'form-control form-control-sm' %>
        </div>
      </div>

      <div class="col-6">
        <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, class: 'form-control form-control-sm' %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email, class: 'form-control form-control-sm' %>
        </div>

        <div class="form-group">
          <%= form.label :bank_name %>
          <%= form.text_field :bank_name, class: 'form-control form-control-sm' %>
        </div>
        <div class="form-group">
          <%= form.label :cbu %>
          <%= form.text_field :cbu, class: 'form-control form-control-sm' %>
        </div>
        <div class="form-group">
          <%= form.label :account_number %>
          <%= form.text_field :account_number, class: 'form-control form-control-sm' %>
        </div>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
    <%= save_button %>
  </div>
<% end %>
