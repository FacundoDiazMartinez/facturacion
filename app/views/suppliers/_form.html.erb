<%= form_with(model: supplier, remote: true) do |form| %>
  <div class="modal-body">
    <div id="supplier_errors"></div>

    <div class="form-group row">
      <%= form.label :name, class: 'col-sm-3 col-form-label col-form-label-sm' %>
      <div class="col-md-9">
        <%= form.text_field :name, class: 'form-control form-control-sm' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :document_number, class: 'col-sm-3 col-form-label col-form-label-sm' %>
      <div class="col-md-9">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <%= form.select :document_type, Afip::DOCUMENTOS, {}, {class: 'form-control form-control-sm input-group-text'} %>
          </div>
          <%= form.text_field :document_number, class: 'form-control form-control-sm', required: true %>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :phone, class: 'col-sm-3 col-form-label col-form-label-sm' %>
      <div class="col-md-9">
        <%= form.text_field :phone, class: 'form-control form-control-sm' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :mobile_phone, class: 'col-sm-3 col-form-label col-form-label-sm' %>
      <div class="col-md-9">
        <%= form.text_field :mobile_phone, class: 'form-control form-control-sm' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :address, class: 'col-sm-3 col-form-label col-form-label-sm' %>
      <div class="col-md-9">
        <%= form.text_field :address, class: 'form-control form-control-sm' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :email, class: 'col-sm-3 col-form-label col-form-label-sm' %>
      <div class="col-md-9">
        <%= form.email_field :email, class: 'form-control form-control-sm' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :cbu, class: 'col-sm-3 col-form-label col-form-label-sm' %>
      <div class="col-md-9">
        <%= form.text_field :cbu, class: 'form-control form-control-sm' %>
      </div>
    </div>

  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
    <%= save_button %>
  </div>
<% end %>
