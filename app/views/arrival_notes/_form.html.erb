<%= nested_form_for @arrival_note do |form| %>
  <%= error_explanation @arrival_note %>
  <!-- HEADER -->
    <div class="card shadow">
      <div class="card-body">
        <div class="row">
          <!-- PRIMERA COLUMNA -->
            <div class="col-sm">
              <div class="form-group">
                <%= form.label :purchase_order_id, "Orden de compra" %>
                <%= form.select :purchase_order_id, current_user.company.purchase_orders.sended_orders, {prompt: "Seleccione..."}, {class: 'form-control'} %>
              </div>
              <div class="form-group">
                <%= form.label :depot_id, "AlmacÃ©n receptor" %>
                <%= form.select :depot_id, current_user.company.depots.map{|d| [d.name, d.id]}, {prompt: "Seleccione..."}, {class: 'form-control'} %>
              </div>
            </div>
          <!-- PRIMERA COLUMNA -->
          <!-- SEGUNDA COLUMNA -->
            <div class="col-sm">

              <div class="form-group">
                <%= form.label :user_id, "Creado por" %>
                <%= form.select :user_id, [current_user.name, current_user.id], {}, {class: 'form-control', disabled: true} %>
              </div>
              <div class="form-group">
                <%= form.label :state, "Estado" %>
                <%= form.select :state, ArrivalNote::STATES, {}, {class: 'form-control', disabled: true} %>
              </div>

            </div>
          <!-- SEGUNDA COLUMNA -->
        </div>
      </div>
    </div>
  <!-- HEADER -->
  <hr>
  <!-- DETALLES -->
    <h3 class="d-flex mb-2">
      <div class="p-2">
        <%= icon('fas', 'boxes') %>
        Productos
      </div>
      <div class="ml-auto p-2">
        <%= form.link_to_add "#{icon('fas', 'plus')} Agregar producto".html_safe, :arrival_note_details, class: 'btn btn-success', data: {target: '#details'} %>
      </div>
    </h3>
    <div class="card shadow" id="arrival_details">
      <%= render template: '/arrival_notes/details/index.html.erb', locals:{form: form} %>
    </div>
  <!-- DETALLES -->
    <hr>
    <center>
      <%= save_button %>
    </center>
<% end %>
