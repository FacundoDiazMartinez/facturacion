<p id="notice"><%= notice %></p>

<h1>Arrival Notes</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Purchase order</th>
      <th>User</th>
      <th>Active</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arrival_notes.each do |arrival_note| %>
      <tr>
        <td><%= arrival_note.company %></td>
        <td><%= arrival_note.purchase_order %></td>
        <td><%= arrival_note.user %></td>
        <td><%= arrival_note.active %></td>
        <td><%= arrival_note.state %></td>
        <td><%= link_to 'Show', arrival_note %></td>
        <td><%= link_to 'Edit', edit_arrival_note_path(arrival_note) %></td>
        <td><%= link_to 'Destroy', arrival_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

